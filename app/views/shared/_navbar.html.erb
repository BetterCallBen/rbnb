<div class="navbar navbar-expand-sm navbar-light navbar-airbandme">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/robintrllt/image/upload/v1637230900/logodicetrans_iu2irh.png", id:"logo"%>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <p id="welcome"> Welcome </p>
          <p id="current-user"><%= current_user.pseudo %></p>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://res.cloudinary.com/robintrllt/image/upload/v1637231554/singewhite_ldbcyn.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My reservations", my_reservations_path, class: "dropdown-item" %>
            <%= link_to "My games", my_games_path, class: "dropdown-item" %>
            <%= link_to "Add a game", new_game_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link", id:"login"%>
        </li>
      <% end %>
    </ul>
  </div>
</div>
