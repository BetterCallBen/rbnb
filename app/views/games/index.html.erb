<div class="container-index">
  <h1>Games List</h1>

  <%= render 'shared/search' %>

  <% if @games.empty? %>
    <p>Aucun jeu dans cette zone</p>
  <% else %>
    <div class="container-games-map">
      <div>
        <div class="game-cards-index">

          <% @games.each do |game| %>

            <div class="game-card-index">
              <%= link_to game_path(game) do %>
                <div class="card-index-container">

                  <div class="photo">
                    <% if game.photos.count.positive? %>
                        <%= cl_image_tag game.photos.first.key%>
                    <% end %>
                  </div>

                  <div class="infos-card">
                    <div class="title">
                      <h2 class="game-title"><%= game.name.capitalize %></h2>
                      <h2 class="game-title"><%= game.price%>,00 <span class="euro">â‚¬</span></h2>
                    </div>

                    <div class="description-card">
                      <h4 class="game-text"><%= game.description%></h4>
                    </div>

                    <div class="tags-card">
                      <h4 class="tag-card"><%= game.number_of_players%> players</h4>
                      <h4 class="tag-card"><%= game.category.capitalize%></h4>
                    </div>

                  </div>
                </div>

              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="container-map">
        <div id="map"
          data-markers="<%= @markers.to_json %>"
          data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
    </div>
  <% end %>
</div>
