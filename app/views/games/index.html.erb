<h1>Games List</h1>

<%= render 'shared/search' %>

<% if @games.empty? %>
  <p>Aucun jeu dans cette zone</p>
<% else %>
  <% @games.each do  |game| %>

  <div id="map"
      style="width: 100%; height: 700px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
      <%= link_to game_path(game) do %>

        <div class="">
          <% if game.photos.count.positive? %>
              <%= cl_image_tag game.photos.first.key, height: 400, width: 400, crop: :fill %>
          <% end %>

          <h2><%= game.name.capitalize %></h2>

          <div class="">
            <h3>Owner: <%= game.owner.pseudo%></h3>
            <h3>price: <%= game.price%><span>â‚¬</span></h3>
          </div>

          <div class="">
            <h4>Players: <%= game.number_of_players%></h4>
            <h4>category: <%= game.category.capitalize%></h4>
            <h4>description: <%= game.description%></h4>
          </div>

        </div>

      </div>
    <% end %>
  <%end%>
<% end %>
