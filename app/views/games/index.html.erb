<h1>Games List</h1>

<%@games.each do  |game| %>
<br>

  <%= link_to game_path(game) do %>

    <div class="">
       <h2><%= game.name %></h2>
      <div class="">
      <h3>Owner: <%= game.owner.pseudo%></h3>
      <h3>price: <%= game.price%><span>â‚¬</span></h3>
      </div>
       <div class="">
          <h4>Players: <%= game.number_of_players%></h4>
          <h4>category: <%= game.category%></h4>
          <h4>description: <%= game.description%></h4>
      </div>
    </div>
  </div>
  <% end %>
<%end%>

<div id="map"
     style="width: 100%; height: 700px;"
     data-markers="<%= @markers.to_json %>"
